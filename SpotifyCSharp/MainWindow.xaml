<Window x:Class="SpotifyCSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpotifyCSharp"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1250"
        MinHeight="720" MinWidth="1250">
    <Grid>
        <StackPanel Height="100" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="0,0,0,0" Background="Red">
            <Image x:Name="AlbumImage" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="50,-25,0,0" Height="75" Width="75"/>
        </StackPanel>
        <GroupBox x:Name="UserGroupBox" HorizontalAlignment="Left" VerticalAlignment="Top" Header="User Info" Margin="20,0,0,0" Height="100" Width="250">
            <Grid>
                <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Click="LoginButton_Click"/>
                <Border CornerRadius="24">
                    <Image x:Name="ProfileImage"   HorizontalAlignment="Left" Height="48" Margin="20,0,0,0" VerticalAlignment="Center" Width="48" Visibility="Hidden"/>
                </Border>
                <TextBlock x:Name="NameLabel" HorizontalAlignment="Left" Margin="86,0,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Center" Visibility="Hidden"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
