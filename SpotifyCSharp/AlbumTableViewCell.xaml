<local:TableViewCell x:Class="SpotifyCSharp.AlbumTableViewCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpotifyCSharp"
             mc:Ignorable="d" 
             d:DesignHeight="200" HorizontalAlignment="Stretch" Width="1200" Background="White" MouseLeftButtonDown="TableViewCell_MouseLeftButtonDown">
    <Grid>
        <Image x:Name="AlbumImage" Height="100" Margin="15,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Width="100"/>
        <TextBlock x:Name="ArtistLabel" Text="Label" HorizontalAlignment="Left" Margin="150,30,0,0" VerticalAlignment="Center"/>
        <TextBlock x:Name="AlbumLabel" TextAlignment="Left" Margin="150,0,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Center" FontWeight="Bold" HorizontalAlignment="Left" Width="660"/>
        <Image x:Name="PlayButton" HorizontalAlignment="Right" Height="30" Margin="0,0,75,0" VerticalAlignment="Center" Width="30" MouseLeftButtonDown="Image_MouseLeftButtonDown" Source="Images/play.png"/>
    </Grid>
</local:TableViewCell>